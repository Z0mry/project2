<%- include("partials/header.ejs") %>

<html>

<body style=>

  <h1 style="text-align: center; margin-top: 30px;">Edit Post</h1>

  <main style="display: flex; flex-direction: column; align-items: center;">
    <form action="/edit/<%= post.id %>" method="post" style="width: 80%; display: flex; flex-direction: column; align-items: center;">
      <label for="content">Content:</label>
      <textarea  style="width: 50%" name="content" id="content" rows="8" required><%= post.content %> </textarea>
      <br>
      <button style="color: #fff; background-color: #007bff; border-color: #007bff; text-align: center; vertical-align: middle; border: 1px solid transparent; padding: 0.375rem 0.75rem; font-size: 1rem; line-height: 1.5; border-radius: 0.25rem; cursor: pointer;" type="submit">Save Changes</button>
    </form>
  </main>

  <a href="/" style="display: flex; justify-content: center; margin-top: 20px; text-decoration: none; color: #007bff;">Back to Home</a>
</body>

</html>
