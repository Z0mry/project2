<%- include("partials/header.ejs") %>

<html>

<body style="margin: 0; padding: 0; height: 100%;">

  <h1 style="margin-top: 20px; text-align: center;">Create a New Post</h1>

  <main style="display: flex; flex-direction: column; align-items: center; width: 80%; margin: auto; flex-grow: 1;">
    <form action="/create" method="post" enctype="multipart/form-data" style="display: flex; flex-direction: column; align-items: center; width: 100%;">
      <label for="content" style="text-align: center;">Content:</label>
      <textarea name="content" id="content" rows="8" style="width: 50%; margin-bottom: 10px;" required></textarea>
      <label for="image" style="text-align: center;">Image:</label>
      <input type="file" name="image" id="image" accept="image/*" style="margin-bottom: 10px;">
      <button style="color: #fff; background-color: #007bff; border-color: #007bff; text-align: center; vertical-align: middle; border: 1px solid transparent; padding: 0.375rem 0.75rem; font-size: 1rem; line-height: 1.5; border-radius: 0.25rem; cursor: pointer;" type="submit">Create Post</button>
    </form>
  </main>

  <a href="/" style="display: flex; justify-content: center; margin-top: 20px; text-decoration: none; color: #007bff;">Back to Home</a>
  <%- include("partials/footer.ejs") %>
</body>

</html>
